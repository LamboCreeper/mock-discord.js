{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "declaration": true
  },
  "exclude": ["./test", "./build"],
  "typedocOptions": {
    "out": "./docs",
    "inputFiles": [
      "./src/BaseMocks.ts",
      "./src/defaults.guild.ts"
    ]
  }
}